{
  "name": "league/oauth1-client",
  "description": "OAuth 1.0 Client Library",
  "license": "MIT",
  "require": {
    "php": ">=7.2||>=8.0",
    "guzzlehttp/psr7": "^1.6",
    "psr/http-client": "^1.0",
    "psr/http-client-implementation": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-factory-implementation": "^1.0",
    "psr/http-message": "^1.0",
    "psr/http-message-implementation": "^1.0|^7.0"
  },
  "require-dev": {
    "ext-json": "*",
    "ext-openssl": "*",
    "friendsofphp/php-cs-fixer": "^2.16.1",
    "guzzlehttp/guzzle": "^7.0",
    "http-interop/http-factory-guzzle": "^1.0",
    "mockery/mockery": "^1.3",
    "phpstan/phpstan": "^0.12.42",
    "phpunit/phpunit": "^7.5||^9.5",
    "roave/security-advisories": "dev-master"
  },
  "scripts": {
    "analyze": "vendor/bin/phpstan analyse -l 6 src",
    "php-cs-fixer:lint": "vendor/bin/php-cs-fixer fix --verbose --dry-run",
    "php-cs-fixer:format": "vendor/bin/php-cs-fixer fix",
    "test:unit": "vendor/bin/phpunit --coverage-text --coverage-clover coverage.xml"
  },
  "suggest": {
    "ext-json": "Most providers require the JSON extension to parse user detail responses",
    "ext-openssl": "The RSA signing method requires this extension to function",
    "guzzlehttp/guzzle": "The recommended PSR-18 HTTP client implementation for PHP 7.2+",
    "http-interop/http-factory-guzzle": "The recommended PSR-17 HTTP factory implementation",
    "php-http/guzzle6-adapter": "The recommended PSR-18 HTTP client implementation for PHP 7.1"
  },
  "keywords": [
    "oauth",
    "oauth1",
    "authorization",
    "authentication",
    "idp",
    "identity",
    "sso",
    "single sign on",
    "bitbucket",
    "trello",
    "tumblr",
    "twitter"
  ],
  "authors": [
    {
      "name": "Ben Corlett",
      "email": "bencorlett@me.com",
      "homepage": "https://webcomm.io",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "League\\OAuth1\\Client\\": "src/",
      "League\\OAuth1\\Client\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev",
      "dev-develop": "2.0-dev"
    }
  }
}
